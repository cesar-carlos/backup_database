# Configuração para rodar como SERVIDOR
APP_NAME=Backup Database (Server)
APP_VERSION=2.2.4
DEBUG_MODE=true
AUTO_UPDATE_FEED_URL=

# Single Instance Control
# IMPORTANTE: false para permitir múltiplas instâncias em desenvolvimento
SINGLE_INSTANCE_ENABLED=false

# UI scheduler fallback (quando nao conseguir consultar status do servico)
# fail_open: inicia scheduler local (padrao)
# fail_safe: nao inicia scheduler local
UI_SCHEDULER_FALLBACK_MODE=fail_open

# App mode: servidor
DEBUG_APP_MODE=server

# Porta do socket server (default 9527)
SOCKET_SERVER_PORT=9527

